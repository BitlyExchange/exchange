{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es2022",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"noEmit": false,
		"outDir": "dist",
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": "src",
		"incremental": true,
		"paths": {
			"@bitly/sdk": ["../sdk/src/index.ts"],
			"@bitly/sdk/*": ["../sdk/src/*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	]
}